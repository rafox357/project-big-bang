---
import { categories } from '../data/projects';
---

<header class="site-header">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-16">
      <a href="/" class="logo">Project X</a>

      <div class="nav-links">
        <div class="nav-item projects-dropdown">
          <button class="nav-link">
            Projects
            <span class="arrow">â–¾</span>
          </button>
          <div class="dropdown-content">
            <div class="dropdown-section">
              <a href="/projects" class="view-all">View All Projects</a>
            </div>
            <div class="dropdown-section">
              <h3>Categories</h3>
              <div class="categories-grid">
                {categories.map(category => (
                  <a href={`/category/${category.id}`} class="category-link">
                    <h4>{category.name}</h4>
                    <p>{category.description}</p>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
        <a href="/docs" class="nav-link">Documentation</a>
        <a href="/learn" class="nav-link">Learn</a>
        <a href="/community" class="nav-link">Community</a>
      </div>

      <div class="action-buttons">
        <a href="/github" class="github-link">
          <span class="github-icon">
            <svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
            </svg>
          </span>
          GitHub
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .site-header {
    @apply bg-accent/5 backdrop-blur-lg sticky top-0 z-50;
  }

  .logo {
    @apply text-xl font-bold text-accent hover:text-accent-light transition-colors;
  }

  .nav-links {
    @apply flex items-center gap-8;
  }

  .nav-item {
    @apply relative;
  }

  .nav-link {
    @apply flex items-center gap-1 text-accent-light/70 hover:text-accent-light transition-colors;
  }

  .arrow {
    @apply text-xs ml-1;
  }

  .projects-dropdown:hover .dropdown-content {
    @apply block;
  }

  .dropdown-content {
    @apply hidden absolute top-full left-1/2 -translate-x-1/2 w-[600px] bg-accent/5 backdrop-blur-lg rounded-lg shadow-lg mt-2;
  }

  .dropdown-section {
    @apply p-4 border-b border-accent/10 last:border-0;
  }

  .view-all {
    @apply block w-full text-center py-2 text-accent hover:text-accent-light transition-colors;
  }

  .dropdown-section h3 {
    @apply text-sm font-medium text-accent-light/50 mb-4;
  }

  .categories-grid {
    @apply grid grid-cols-2 gap-4;
  }

  .category-link {
    @apply block p-4 rounded-lg hover:bg-accent/10 transition-colors;
  }

  .category-link h4 {
    @apply font-medium mb-1;
  }

  .category-link p {
    @apply text-sm text-accent-light/70;
  }

  .action-buttons {
    @apply flex items-center gap-4;
  }

  .github-link {
    @apply flex items-center gap-2 px-4 py-2 rounded-lg bg-accent/10 hover:bg-accent/20 transition-colors;
  }

  .github-icon {
    @apply text-accent-light/90;
  }
</style>
