---

<section class="roadmap-section py-20 bg-gradient-to-b from-[#1a1b26] to-[#13151a]">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12 bg-gradient-to-r from-[#00e5ff] to-[#ff3d00] text-transparent bg-clip-text">
      Project Roadmap
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {stages.map(stage => (
        <div class="bg-opacity-20 bg-accent p-6 rounded-lg border border-accent border-opacity-30">
          <div class="text-accent mb-2">{stage.phase}</div>
          <h3 class="text-xl font-semibold text-accent-light mb-4">{stage.title}</h3>
          <ul class="space-y-2">
            {stage.items.map(item => (
              <li class="text-accent-light/80 flex items-center">
                <span class="mr-2">â†’</span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>